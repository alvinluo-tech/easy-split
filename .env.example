# Example environment variables (copy to .env.local and fill real values)

# Firebase client (public) - obtain from Firebase console (Project Settings > General)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890abcdef
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin (service account) - DO NOT COMMIT REAL VALUES
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=service-account@your-project-id.iam.gserviceaccount.com
# Paste the multiline private key or keep escaped \n newlines. Never commit the real one.
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_LINES\n-----END PRIVATE KEY-----\n"
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Azure Document Intelligence (Form Recognizer)
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-cognitive-resource.cognitiveservices.azure.com
AZURE_FORM_RECOGNIZER_KEY=your-azure-key

# Other optional settings
# NEXT_PUBLIC_FEATURE_FLAG_EXAMPLE=true
